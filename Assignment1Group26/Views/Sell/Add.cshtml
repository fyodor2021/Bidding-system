@model Bid
@using (Html.BeginForm("Add", "Sell", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
<div class="container">
    <div class="row">
        <h1>@ViewBag.Action Bid</h1>
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">
                Please Enter The Following Information
            </h2>
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" asp-controller="Sell" asp-action="Add" method="post">
                    <div class="mb-3">

                            <p style="color:red">@Html.ValidationMessageFor(b=>b.BidName)</p>
                            <input hidden readonly asp-for="@Model.BidId">

                        <input asp-for="BidName" type="text" class="form-control" id="BidName" aria-describedby="emailHelp"
                               placeholder="Bid Name">
                    </div>
                    <div class="mb-3">
                            <p style="color:red">
                          @Html.ValidationMessageFor(b=>b.BidDescription)  </p>
                        <input asp-for="BidDescription" type="text" class="form-control" id="BidDescription" aria-describedby="emailHelp"
                               placeholder="Bid Description">
                    </div>
                    <div class="mb-3">
                            <p style="color:red">@Html.ValidationMessageFor(b=>b.BidCost)  </p>

                            
                        <input asp-for="BidCost" type="text" class="form-control" id="BidCost" aria-describedby="emailHelp"
                               placeholder="Bid Cost">
                    </div>
                    <div class="mb-3">
                            <p style="color:red">@Html.ValidationMessageFor(b=>b.BidStartDate)  </p>
                        <label asp-for="BidStartDate">Bid Start Date</label>
                        <input asp-for="BidStartDate" type="date" class="form-control" id="Username" aria-describedby="emailHelp"
                               placeholder="Bid Start Date">
                    </div>
                    <div class="mb-3">
                            @if (ViewData["ValidationMessage"] != null)
                            {
                                <p style="color:red;">@ViewData["ValidationMessage"]</p>
                            }
                        <label asp-for="BidEndDate">Bid End Date</label>
                            <input asp-for="BidEndDate" type="date" class="form-control" id="Username" aria-describedby="emailHelp"
                               placeholder="Bid End Date">
                    </div>
                        <p style="color:red">@Html.ValidationMessageFor(b=>b.CategoryId)</p>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Category</label>
                            </div>

                            <select asp-for="CategoryId" class="custom-select" id="inputGroupSelect01">
                                @Html.ValidationMessageFor(b=>b.CategoryId)

                                <option selected>Choose...</option>
                                @foreach (Category c in ViewBag.Categories)
                                {
                                    <option value="@c.CategoryId">@c.CategoryName</option>
                                }
                            </select>
                        </div>
                         <p style="color:red">@Html.ValidationMessageFor(b=>b.AssetConditionId)  </p>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <label class="input-group-text" for="inputGroupSelect01">Asset Condition</label>
                            </div>

                            <select asp-for="AssetConditionId" class="custom-select" id="inputGroupSelect01">
                                @Html.ValidationMessageFor(b=>b.AssetConditionId)

                                <option selected>Choose...</option>
                                @foreach (AssetCondition a in ViewBag.AssetCondition)
                                {
                                    <option value="@a.AssetConditionId">@a.AssetConditionStatus</option>
                                }
                            </select>
                        </div>
                        <p style="color:red">@Html.ValidationMessageFor(b=>b.ImageFile)  </p>
                        <div class="input-group mb-3">
                            <div class="custom-file">
                                <label class="custom-file-label" for="inputGroupFile04">Upload the item image</label>
                                <input asp-for="@Model.ImageFile" type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
                                <input hidden  asp-for="@Model.ImagePath">

                                @if (ViewBag.Image != null)

                                {
                                    <p>You have uploaded</p>
                                    <img src="@Url.Content(ViewBag.Image)" width="100px" height="100px" />

                                }

                            </div>

                        </div>
                    <div class="input-group mb-3">

                            <button type="submit" class="btn btn-primary" style="margin-right:5px;">@ViewBag.Action</button>
                        <button asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</button>

                       </div>

                </form>
            </div>


        </div>
    </div>
</div>
}

