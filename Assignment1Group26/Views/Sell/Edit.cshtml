@model Bid
@using (Html.BeginForm("Editing", "Sell", FormMethod.Post, new { @enctype = "multipart/form-data" })){

<div class="container">
    <div class="row">
        <h1>Edit</h1>
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">
                Please Enter The Following Information
            </h2>
                <div class="card formStyle my-5">
                        

                    <form class="card-body cardbody-color p-lg-5" asp-controller="Sell" asp-action="Editing"  method="post">
                        <input hidden readonly asp-for="@Model.BidId">
                        <input hidden readonly name="ImageData" value="@Url.Content(ViewBag.Image)">
                        <div class="mb-3">
                        <input asp-for="BidName" type="text" class="form-control" id="BidName" aria-describedby="emailHelp"
                               placeholder="@Model.BidName">
                    </div>
                    <div class="mb-3">
                        <input asp-for="BidDescription" type="text" class="form-control" id="BidDescription" aria-describedby="emailHelp"
                               placeholder="@Model.BidDescription">
                    </div>
                    <div class="mb-3">
                            <input asp-for="BidStartPrice" type="text" class="form-control" id="BidCost" aria-describedby="emailHelp"
                                   placeholder="@Model.BidStartPrice">
                    </div>
                    <div class="mb-3">
                        <label asp-for="BidStartDate">Bid Start Date</label>
                        <input asp-for="BidStartDate" type="date" class="form-control" id="Username" aria-describedby="emailHelp"
                               placeholder="@Model.BidStartDate">
                    </div>
                    <div class="mb-3">
                        <label asp-for="BidEndDate">Bid End Date</label>
                        <input asp-for="BidEndDate" type="date" class="form-control" id="password" placeholder="@Model.BidEndDate">
                    </div>

                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01" style="margin-right:5px;">Category: </label>
                        </div>
                        <div>
                            <label class="input-group-text">@Model.Category.CategoryName</label>

                        </div>

                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <label class="input-group-text" for="inputGroupSelect01" style="margin-right:5px;">Asset Condition: </label>
                        </div>
                        <div>
                            <label class="input-group-text">@Model.AssetCondition.AssetConditionStatus</label>

                        </div>

                    </div>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <label class="custom-file-label" for="inputGroupFile04">Upload the item image</label>
                            <input type="file" class="custom-file-input" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04">
                            @if (ViewBag.Image != null)

                            {
                                <p>You have uploaded</p>
                                <img src="@Url.Content(ViewBag.Image)" width="200px" height="200px" />

                            }

                        </div>

                    </div>

                    <div class="input-group mb-3">

                        <button  type="submit" class="btn btn-primary" style="margin-right:5px;">Edit</button>
                        <button asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</button>

                    </div>

                </form>
            </div>

        </div>
    </div>
</div>
}