@model Client
<div class="row gutters-sm" style="margin-bottom:85px;">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column align-items-center text-center">
                    <div class="mt-3">
                        <h2>Welcome Back!<br />@Model.ClientFirstName </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.ClientFirstName  @Model.ClientLastName
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.ClientUserName
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-3">
                        <h6 class="mb-0">Email Verified</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                        @Model.EmailConfirmed
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-sm-12 " style="margin-top:5px;">
                        <a asp-controller="Profile" asp-action="Edit" asp-route-id="@Model.ClientId" class="btn btn-info">Edit</a>
                        <a class="btn btn-info " target="_blank" asp-action="Index" asp-controller="Home">Home</a>

                    </div>

                </div>
            </div>
        </div>

    </div>



</div>

