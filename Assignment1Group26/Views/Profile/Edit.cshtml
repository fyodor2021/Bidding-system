@model Client
    <form asp-controller="Profile" asp-action="Edit" method="Post" enctype="multipart/form-data">
    <div class="container">
        <div class="main-body">



            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <div class="mt-3">
                                    <h2>Welcome Back!<br />@Model.ClientFirstName</h2>
                                </div>
                            </div>
                        </div>
                    </div>







                    <form asp-controller="Profile" asp-action="Edit" method="post">
                        <div class="col-md-8">
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">First Name</h6>
                                        </div>
                                        <input  asp-for="ClientId" value="@Model.ClientId" hidden readonly>
                                        <input asp-for="ClientUserName" value="@Model.ClientUserName" hidden readonly>
                                        <input asp-for="VerficationToken" value="@Model.VerficationToken" hidden readonly>
                                        <input asp-for="EmailConfirmed" value="@Model.EmailConfirmed" hidden readonly>




                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="ClientFirstName" type="text" class="form-control" id="BidName" aria-describedby="emailHelp"
                                               placeholder="@Model.ClientFirstName">
                                        </div>
                                    </div>
                                    <hr>

                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Last Name</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="ClientLastName" type="text" class="form-control" id="BidName" aria-describedby="emailHelp"
                                               placeholder="@Model.ClientLastName">
                                        </div>
                                    </div>

                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Change Password</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="ClientPassword" type="password" class="form-control" id="BidName" value="@Model.ClientPassword" aria-describedby="emailHelp" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679">
                                        </div>
                                    </div>
                                    <hr>
                                    <div class="row">
                                        <div class="col-sm-3">
                                            <h6 class="mb-0">Confirm Password</h6>
                                        </div>
                                        <div class="col-sm-9 text-secondary">
                                            <input asp-for="ClientRetypePassword" type="password" class="form-control" id="BidName" value="@Model.ClientPassword" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679">
                                        </div>
                                        <hr style="margin-top:10px;">
                                    <div class="col-sm-9 text-secondary">
                                        @{
                                            if (ViewData["errorMessage"] != null)
                                            {
                                                <h5 style="color:red;">@ViewData["errorMessage"]</h5>
                                            }
                                            else
                                            {
                                                <h5>@ViewData["confirmationMessage"]</h5>
                                            }
                                        }
                                        </div>
                                    </div>
                                    <div class="input-group mb-3">
                                        
                                            
                                            
                                        <button type="submit" class="btn btn-primary" style="margin-right:5px;">Edit</button>
                                        <button asp-controller="Home" asp-action="Index" class="btn btn-primary">Home</button>

                                    </div>

                                </div>
                            </div>
                        </div>

                    </form>


        </div>
    </form>
