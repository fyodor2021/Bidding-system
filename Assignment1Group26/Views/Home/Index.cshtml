@model IEnumerable<Bid>
@{
    ViewData["Title"] = "JoseDore";
}
@foreach (Bid b in Model)
{
    <div class="card" style="width: 18rem; display:inline-block;">
        <a asp-controller="Sell" asp-action="Details" asp-route-id="@b.BidId">
            <img  class="card-img-top" src="@Url.Content(b.ImagePath)" alt="Card image cap" hight="300" width="300">
            </a>
        <div class="card-body">
        <h5 class="card-title">@b.BidName</h5>
        <p class="card-text">@b.BidCost</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
    </div>
}
