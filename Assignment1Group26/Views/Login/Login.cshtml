@model Client
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Please enter your credentials</h2>
            <div class="card formStyle my-5">

                <form class="card-body cardbody-color p-lg-5" asp-controller="Login" asp-action="MultiFactor">

                    <div class="mb-3">
                        <input asp-for="ClientUserName" type="text" class="form-control" id="Username" aria-describedby="emailHelp"
                               placeholder="User Name">
                    </div>
                    <div class="mb-3">
                        <input asp-for="ClientPassword" type="password" class="form-control" id="password" placeholder="password">
                    </div>
                    <div class="mb-3">
                        <input asp-for="keepLoggedIn" type="checkbox"/>
                        keep me logged In.
                    </div>
                    <a style="font-size: 14px;margin-left: 11px;" id="modalOpener">Forgot Password ?</a>

                    @if (ViewData["ValidationMessage"] != null)
                        {
                        <h2 style="color:red; margin-left: 10px;">@ViewData["ValidationMessage"]</h2>
                        }

                    <div class="text-center">
                        <button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button>
                    </div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        

                        
                            Not
                        Registered? <a asp-controller="Registration" asp-action="Register" class="text-dark fw-bold">
                            Create an
                            Account.
                        </a>

                    </div>
                </form>

            </div>

        </div>
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1>Forgot Password</h1>
                    </div>
                    <div class="modal-body" style="margin-left: 17px;">
                        <div class="form-body">
                            <div class="row">
                                <div class="container" style="margin-bottom:20px">

                                    <div class="card formStyle">
                                        <h2>
                                            Please Enter your Email:
                                        </h2>

                                        <form asp-action="PassResetEmail" asp-controller="Password" method="post" enctype="multipart/form-data">
                                            <input asp-for="ClientUserName"  style="margin-bottom:10px;width: 360px;cursor:pointer" id="bid_input;" placeholder="example@gmail.com" value="">
                                            <div class="button-group">
                                                <input asp-for="ClientId" hidden readonly>
                                                <button type="submit">Submit</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
