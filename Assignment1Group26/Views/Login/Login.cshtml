@model Client
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2 class="text-center text-dark mt-5">Please enter your credentials</h2>
            <div class="card my-5">

                <form class="card-body cardbody-color p-lg-5" asp-controller="Login" asp-action="Login">

                    <div class="mb-3">
                        <input asp-for="ClientUserName" type="text" class="form-control" id="Username" aria-describedby="emailHelp"
                               placeholder="User Name">
                    </div>
                    <div class="mb-3">
                        <input asp-for="ClientPassword" type="password" class="form-control" id="password" placeholder="password">
                    </div>
                    <div class="mb-3">
                        <input asp-for="keepLoggedIn" type="checkbox"/>
                        keep me logged In.
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                    <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                        @if (ViewData["ValidationMessage"] != null)
                        {
                            <h2 style="color:red;">@ViewData["ValidationMessage"]</h2>
                        }
                        Not
                        Registered? <a asp-controller="Registration" asp-action="Index" class="text-dark fw-bold">
                            Create an
                            Account.
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
