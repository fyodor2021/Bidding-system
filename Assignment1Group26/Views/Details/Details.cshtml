@model Bid
<div class="container">
    <div class="row">
        <div class="col-md-5" style="margin-top: 37px;">
            <div class="project-info-box mt-0">
                <h5>PROJECT DETAILS</h5>
                <p class="mb-0">@Model.BidDescription</p>
            </div>

            <div class="project-info-box">
                <p><b>Sold By:</b><a asp-controller="Profile" asp-action="CommonProfile" asp-route-id="@Model.Client.ClientId">@Model.Client.ClientFirstName @Model.Client.ClientLastName</a></p>

                <p><b>Item Name:</b> @Model.BidName</p>
                <p><b>Start Date:</b> @Model.BidStartDate</p>
                <p><b>End Date:</b> @Model.BidEndDate</p>
                <p class="mb-0"><b>Cost:</b> $@Model.BidCost</p>
                <p><b>Condition:</b> @Model.AssetCondition.AssetConditionStatus</p>
                <p><b>Category:</b> @Model.Category.CategoryName</p>
                <button type="submit" value="Bid" class="btn btn-primary" style="width:7.5rem;">Bid</button>
            </div>

            
        </div>

        <div class="col-md-7">
            <img src="data:image/*;base64,@(Convert.ToBase64String(Model.ImageData))" alt="project-image" class="rounded" style="margin-top:36px;">
        </div>
    </div>
</div>

